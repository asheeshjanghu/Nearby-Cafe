<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tvHeadingCafeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nearby_shops"
        style="@style/Heading"/>


    <TextView
        android:id="@+id/tvHeadingCafeDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/shop_distance_name"
        android:textColor="@color/textColorPrimary"
        android:layout_margin="@dimen/views_gap"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/tvHeadingCafeName"
        />

</RelativeLayout>