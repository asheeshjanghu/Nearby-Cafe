<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RecyclerViewItemStyle">
        <item name="android:layout_margin">@dimen/views_gap</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="Heading">
        <item name="android:layout_margin">@dimen/views_gap</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

</resources>
